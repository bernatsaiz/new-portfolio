---
import BaseLayout from "../layouts/BaseLayout.astro";
import { FaultyTerminalBackground } from "../components/FaultyTerminalBackground";
import TextScramble from "../components/TextScramble.astro";
import RotatingLine from "../components/RotatingLine.astro";
import { projects } from "../data/projects";
import { otherWork } from "../data/otherWork";
import { experiments } from "../data/experiments";
import "../styles/global.css";

---
<BaseLayout title="Bernat Saiz — Data Visualization & Information Design" description="Data Visualization & Information Design." variant="landing">

  <section class="hero">
    <FaultyTerminalBackground
      client:load
      dpr={1}
      scale={2.2}
      gridMul={[2, 1]}
      digitSize={1.2}
      timeScale={2.2}
      scanlineIntensity={0}
      glitchAmount={1.15}
      flickerAmount={0.25}
      curvature={0.1}
      tint="#151437"
      backgroundColor="#191853"
      mouseReact={true}
      mouseStrength={0.7}
      pageLoadAnimation={true}
      brightness={1}
      chromaticAberration={0}
      dither={0.1}
      class="hero__bg"
    />
    <div class="hero__content">
      <div class="hero__top">
        <h1 class="hero__name"><TextScramble text="Bernat Saiz" /></h1>
        <p class="hero__tagline"><TextScramble text="Information Design & Data Visualization" /></p>
      </div>

      <div class="hero__bottom">
        <div class="hero__context">
          <RotatingLine
            lines={[
              "Currently at Domestic Data Streamers",
              "Previously leading design at Verificat",
              "BCN / CAT / ES",
            ]}
            interval={4000}
            class="hero__rotating"
          />
        </div>
        <nav class="hero__nav" aria-label="Navegació principal">
          <TextScramble text="01 WORK" href="#work" class="hero__nav-link" />
          <TextScramble text="02 EXPERIMENTS" href="#experiments" class="hero__nav-link" />
          <TextScramble text="03 INFO" href="#info" class="hero__nav-link" />
        </nav>
      </div>
    </div>
  </section>

  <section class="intro" id="info" aria-labelledby="intro-heading">
    <div class="intro__inner">
      <p class="intro__bio">
        Information designer and data journalist specialized in visual storytelling
        for editorial, civic, and public-interest contexts. Focused on transforming
        complex information into clear, honest, and structured visual systems.
      </p>
      <a href="/info" class="intro__link"><TextScramble text="Full profile " tag="span" /> <span class="link-arrow" aria-hidden="true">&rarr;</span></a>
    </div>
  </section>

  <section class="work" id="work" aria-labelledby="work-heading">
    <div class="work__inner">
      <header class="work__header">
        <h2 id="work-heading" class="section-label">Selected Work</h2>
      </header>

      <div class="work__list">
      {projects.map((project, i) => (
        <article class="project-card" style={`--stagger: ${i}`}>
          <a href={`/work/${project.slug}`} class="project-card__image-link">
            <img
              src={project.images[0]}
              alt={project.title}
              width="1200"
              height="675"
              loading={i < 2 ? "eager" : "lazy"}
              class="project-card__img"
            />
          </a>
          <div class="project-card__body">
            <span class="project-card__num">{String(i + 1).padStart(2, "0")}</span>
            <h3 class="project-card__title">
              <a href={`/work/${project.slug}`}>{project.title}</a>
            </h3>
            <p class="project-card__subtitle">{project.subtitle}</p>
            <div class="project-card__meta">
              <span>{project.year}</span>
              {project.tools && project.tools.length > 0 && (
                <>
                  <span class="project-card__dot">&middot;</span>
                  <span>{project.tools.slice(0, 3).join(", ")}</span>
                </>
              )}
            </div>
            <a href={`/work/${project.slug}`} class="project-card__link">
              <TextScramble text="View project " tag="span" /> <span class="link-arrow" aria-hidden="true">&rarr;</span>
            </a>
          </div>
        </article>
      ))}
      </div>
    </div>
  </section>

  <section class="other-work" id="other-work" aria-labelledby="other-work-heading">
    <div class="other-work__inner">
      <header class="other-work__header">
        <h2 id="other-work-heading" class="section-label">Other relevant work</h2>
        <p class="other-work__intro">A talk and a podcast—media, journalism, and creative formats I'm proud of, outside the main design portfolio.</p>
      </header>
      <div class="other-work__list">
        {otherWork.map((item, i) => (
          <article class="other-work-card" style={`--stagger: ${i}`}>
            {item.image ? (
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="other-work-card__image-link">
                <img
                  src={item.image}
                  alt={item.title}
                  width="800"
                  height="450"
                  loading="lazy"
                  class="other-work-card__img"
                />
              </a>
            ) : (
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="other-work-card__placeholder">
                <span class="other-work-card__kind">{item.kind}</span>
              </a>
            )}
            <div class="other-work-card__body">
              <span class="other-work-card__kind-label">{item.kind}</span>
              <h3 class="other-work-card__title">
                <a href={item.url} target="_blank" rel="noopener noreferrer">{item.title}</a>
              </h3>
              <p class="other-work-card__subtitle">{item.subtitle}</p>
              {item.year && (
                <span class="other-work-card__meta">{item.year}</span>
              )}
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="other-work-card__link">
                {item.ctaText} <span class="link-arrow" aria-hidden="true">&rarr;</span>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="experiments" id="experiments" aria-labelledby="experiments-heading">
    <div class="experiments__inner">
      <header class="experiments__header">
        <h2 id="experiments-heading" class="section-label">Experiments</h2>
        <p class="experiments__intro">Small experiments and prototypes made with vibe coding (AI-assisted).</p>
      </header>
      <div class="experiments__list">
        {experiments.map((exp, i) => (
          <article class="experiment-card" style={`--stagger: ${i}`}>
            <a href={exp.url} target="_blank" rel="noopener noreferrer" class="experiment-card__image-link">
              <img
                src={exp.image}
                alt={exp.title}
                width="800"
                height="450"
                loading="lazy"
                class="experiment-card__img"
              />
            </a>
            <div class="experiment-card__body">
              <span class="experiment-card__badge">Vibe coding</span>
              <h3 class="experiment-card__title">
                <a href={exp.url} target="_blank" rel="noopener noreferrer">{exp.title}</a>
              </h3>
              <p class="experiment-card__desc">{exp.shortDescription}</p>
              {exp.year && (
                <span class="experiment-card__meta">{exp.year}</span>
              )}
              <a href={exp.url} target="_blank" rel="noopener noreferrer" class="experiment-card__link">
                View demo <span class="link-arrow" aria-hidden="true">&rarr;</span>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <footer class="site-footer" id="contact">
    <div class="site-footer__inner">
      <p class="site-footer__contact">
        <a href="mailto:bernatsaiz@gmail.com">bernatsaiz@gmail.com</a>
        <span class="site-footer__sep">&middot;</span>
        <a href="https://www.linkedin.com/in/bernatsaiz/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn (opens in new window)">LinkedIn</a>
        <span class="site-footer__sep">&middot;</span>
        <span>Barcelona</span>
      </p>
      <a href="/info" class="site-footer__profile"><TextScramble text="Full profile " tag="span" /> <span class="link-arrow" aria-hidden="true">&rarr;</span></a>
    </div>
  </footer>

</BaseLayout>

<script>
  function initSectionReveal() {
    const sections = document.querySelectorAll<HTMLElement>(".intro, .work, .other-work, .experiments");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
          }
        });
      },
      { rootMargin: "0px 0px -12% 0px", threshold: 0 }
    );
    sections.forEach((el) => observer.observe(el));
  }
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initSectionReveal);
  } else {
    initSectionReveal();
  }
</script>


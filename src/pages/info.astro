<script>
  const toggle = document.getElementById("exp-toggle");
  const collapsible = document.getElementById("exp-collapsible");

  if (toggle && collapsible) {
    let expanded = false;
    const setExpandedHeight = () => {
      collapsible.style.maxHeight = `${collapsible.scrollHeight}px`;
    };

    collapsible.style.maxHeight = "0px";

    toggle.addEventListener("click", () => {
      expanded = !expanded;
      collapsible.classList.toggle("exp__collapsible--open", expanded);
      if (expanded) {
        setExpandedHeight();
      } else {
        collapsible.style.maxHeight = "0px";
      }
      toggle.setAttribute("aria-expanded", String(expanded));
      toggle.textContent = expanded ? "Show less" : "Show all experience";
    });

    window.addEventListener("resize", () => {
      if (expanded) setExpandedHeight();
    });
  }
</script>

<style>
  .info-back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #666;
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color var(--motion-duration) var(--motion-ease);
  }

  .info-back:hover {
    color: #fff;
    text-decoration: none;
  }

  .info-container {
    max-width: var(--content-max);
    margin: 0 auto;
    padding: 3rem var(--content-padding) 8rem;
  }

  .separator {
    border: 0;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    margin: 3.5rem 0;
  }

  /* Bio */
  .info__bio h1 {
    font-family: "Bai Jamjuree", sans-serif;
    font-size: var(--text-display-page);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem;
    color: #fff;
  }

  .info__bio-text {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-md);
    line-height: 1.75;
    color: #bbb;
    margin: 0;
  }

  /* Sections */
  .info__section h2 {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-2xs);
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #555;
    margin: 0 0 1.5rem;
  }

  .info__expertise {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-sm);
    line-height: 1.7;
    color: #999;
    margin: 0;
  }

  /* Experience items */
  .info__experience,
  .info__education {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .exp__item {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 1.5rem;
    padding: 1rem 0.75rem;
    margin: 0 -0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    border-radius: 4px;
    transition: background-color var(--motion-duration) var(--motion-ease);
  }

  .exp__item:hover {
    background-color: rgba(255, 255, 255, 0.02);
  }

  .exp__item:last-child {
    border-bottom: 0;
  }

  .exp__date {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-2xs);
    font-weight: 600;
    color: #555;
    letter-spacing: 0.04em;
    padding-top: 0.1em;
  }

  .exp__detail {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .exp__company {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-sm);
    font-weight: 600;
    color: #ccc;
  }

  .exp__role {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-xs);
    color: #777;
  }

  /* Collapsible */
  .exp__collapsible {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .exp__collapsible--open {
    max-height: 1200px;
  }

  .exp__toggle {
    appearance: none;
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-2xs);
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #666;
    padding: 0.5rem 1rem;
    margin-top: 1.5rem;
    cursor: pointer;
    transition: color var(--motion-duration) var(--motion-ease),
      border-color var(--motion-duration) var(--motion-ease),
      transform var(--motion-duration) var(--motion-ease);
  }

  .exp__toggle:hover {
    color: #fff;
    border-color: rgba(255, 255, 255, 0.25);
  }

  @media (prefers-reduced-motion: no-preference) {
    .exp__toggle:hover {
      transform: translateY(-1px);
    }
  }

  /* Contact */
  .info__contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .info__contact-link {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-sm);
    color: #ccc;
    text-decoration: none;
    transition: color var(--motion-duration) var(--motion-ease);
  }

  .info__contact-link:hover {
    color: #fff;
    text-decoration: none;
  }

  .info__contact-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .info__contact-sep {
    color: #444;
  }

  .info__contact-text {
    font-family: "JetBrains Mono", monospace;
    font-size: var(--text-sm);
    color: #666;
  }

  @media (max-width: 640px) {
    .info-container {
      padding: 1.5rem var(--content-padding) 4rem;
    }

    .exp__item {
      grid-template-columns: 90px 1fr;
      gap: 1rem;
    }

    .exp__date {
      font-size: var(--text-2xs);
    }

    .info__contact-row {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .exp__item {
      grid-template-columns: 1fr;
      gap: 0.35rem;
      padding: 0.9rem 0;
      margin: 0;
    }
  }
</style>

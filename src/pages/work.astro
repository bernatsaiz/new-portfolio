---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";
import "../styles/global.css";
---
<BaseLayout title="Work — Bernat Saiz" description="Information designer. Data visualization and editorial storytelling.">
  <div class="home">

    <section class="hero">
      <h1 class="hero__title">Bernat Saiz</h1>
      <p class="hero__tagline">Data Visualization & Information Design</p>
      <a href="#projects" class="explore-bar" id="explore-bar">
        <span class="explore-bar__label">Explore projects</span>
        <span class="explore-bar__arrow">→</span>
      </a>
    </section>

    <section class="section" id="projects" aria-labelledby="projects-heading">
      <h2 id="projects-heading" class="section__title">Selected work</h2>
      <ul class="project-list">
        {projects.map((project) => (
          <li class="project-item">
            <a href={`/project/${project.slug}`} class="project-link">
              <span class="project-link__img">
                <img
                  src={project.image ?? `https://picsum.photos/seed/${project.slug}/600/360`}
                  alt=""
                  width="600"
                  height="360"
                  loading="lazy"
                />
              </span>
              <span class="project-link__text">
                <span class="project-link__title">{project.title}</span>
                <span class="project-link__subtitle">{project.subtitle}</span>
              </span>
            </a>
          </li>
        ))}
      </ul>
    </section>

    <section class="section section--about" id="about" aria-labelledby="about-heading">
      <h2 id="about-heading" class="section__title">About</h2>
      <p class="about__p">
        I am a data visualization and information designer with a background in journalism and strategic communication.
        I specialize in transforming complex social, political, and economic information into structures that can be understood, questioned, and discussed.
      </p>
      <p class="about__contact">
        Barcelona · <a href="mailto:bernatsaiz@gmail.com">bernatsaiz@gmail.com</a> · <a href="https://linkedin.com/in/bernatsaiz" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      </p>
    </section>

    <footer class="footer">
      <a href="/">Inici</a>
    </footer>

  </div>
</BaseLayout>

<script>
  const bar = document.getElementById("explore-bar");
  if (bar) {
    bar.addEventListener("click", (e) => {
      const target = document.querySelector("#projects");
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: "smooth", block: "start" });
      }
    });
  }
</script>

<style>
  .home {
    padding-bottom: 4rem;
  }

  .hero {
    min-height: 85vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.03em;
    line-height: 1.05;
  }

  .hero__tagline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #888;
    margin: 0 0 3rem 0;
    font-weight: 400;
  }

  .explore-bar {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    min-width: 280px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 12px;
    color: #eaeaea;
    font-size: 1rem;
    font-weight: 500;
    transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .explore-bar:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  .explore-bar:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.4);
    outline-offset: 4px;
  }

  .explore-bar__arrow {
    opacity: 0.7;
    transition: transform 0.2s ease;
  }

  .explore-bar:hover .explore-bar__arrow {
    transform: translateX(4px);
  }

  .section {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .section__title {
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #666;
    margin: 0 0 2rem 0;
  }

  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-link {
    display: block;
    border-radius: 12px;
    overflow: hidden;
    background: #111;
    border: 1px solid transparent;
    transition: border-color 0.25s ease, transform 0.25s ease, box-shadow 0.25s ease;
  }

  .project-link:hover {
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
  }

  .project-link__img {
    display: block;
    aspect-ratio: 5 / 3;
    overflow: hidden;
  }

  .project-link__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .project-link:hover .project-link__img img {
    transform: scale(1.03);
  }

  .project-link__text {
    display: block;
    padding: 1.25rem 1.5rem;
  }

  .project-link__title {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.35rem;
  }

  .project-link__subtitle {
    display: block;
    font-size: 0.9375rem;
    color: #888;
    line-height: 1.4;
  }

  .section--about {
    padding-top: 2rem;
  }

  .about__p {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    line-height: 1.65;
    color: #bbb;
  }

  .about__contact {
    margin: 0;
    font-size: 0.9375rem;
    color: #888;
  }

  .about__contact a {
    color: #ccc;
  }

  .about__contact a:hover {
    color: #eaeaea;
  }

  .footer {
    text-align: center;
    padding: 2rem 2rem 3rem;
  }

  .footer a {
    font-size: 0.875rem;
    color: #555;
  }

  .footer a:hover {
    color: #888;
  }
</style>

---
interface Props {
  title?: string;
  description?: string;
}
const { title = "Bernat Saiz", description = "Data Visualization & Information Design" } = Astro.props;
---
<!DOCTYPE html>
<html lang="ca">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Workbench:BLED@0..100&display=swap" rel="stylesheet" />
  </head>
  <body>
    <main id="main">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  main {
    min-height: 60vh;
  }
</style>
